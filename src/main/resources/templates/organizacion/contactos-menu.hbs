<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Solicitudes</title>
    <link rel="icon" type="image/x-icon" href="images/menu/utn.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body class="bg-image" style="background-image: url('/images/menu/2258.jpg'); height: 100vh;">
<header class="navbar navbar-expand-lg navbar-light bg-light ps-4 opacity-75">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
            aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand">Bienvenida {{organizacion.razonSocial}}</a>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
                <a class="nav-link" href="/organizacion">Home</a>
            </li>
        </ul>
    </div>

    <a class="nav-link" style="margin-right: 40px;" href="/logout">Logout</a>

</header>

<div class="d-flex justify-content-center">
    <h2 class="p-3 mb-2 bg-light text-dark mt-5 rounded" style="max-width: 245px;">Contactos</h2>
</div>

<div class="d-flex justify-content-center" style="margin-top: 40px;">
    <table class="table table-bordered bg-light" style="max-width: fit-content;">
        <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>
            <th scope="col">Mail</th>
            <th scope="col">Medio de notificacion elegido</th>
            <th scope="col">Enviar recomendaciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden>{{#each contactos}}</div>
        <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.apellido}}</td>
            <td>{{this.nroTelefono}}</td>
            <td>{{this.email}}</td>
            <td>
                {{#each this.mediosDeNotificacion}}
                    {{this}}
                {{/each}}
            </td>

            <form action="/organizacion/contactos/notificar" method="post">
                <td><button class="btn btn-success" type="submit" name="contactoId" value="{{this.id}}">Enviar</button></td>
            </form>

        </tr>
        <div hidden>{{/each}}</div>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-success mb-2">
        <a href="/organizacion/contactos/nuevo" style="color: inherit">
            <h3>Nuevo Contacto</h3>
        </a>
    </button>
</div>

</body>

</html>
