<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vinculacion</title>
    <link rel="icon" type="image/x-icon" href="images/menu/utn.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body class="bg-image" style="background-image: url('/images/menu/2258.jpg'); height: 100vh;">
    <header class="navbar navbar-expand-lg navbar-light bg-light ps-4 opacity-75">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
                aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand">Bienvenido {{trabajador.nombre}} {{trabajador.apellido}}</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/trabajador">Home</a>
                </li>
            </ul>
        </div>

        <a class="nav-link" style="margin-right: 40px;" href="logout" >Logout</a>

    </header>

    <div class="d-flex justify-content-center">
        <h2 class="p-3 mb-2 bg-light text-dark mt-5" style="max-width: 235px;">Trayectos
        </h2>
    </div>

    <div class="d-flex justify-content-center" style="margin-top: 100px;">
        <table class="table table-bordered bg-light" style="max-width: fit-content;">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Altura inicio</th>
                    <th scope="col">Calle inicio</th>
                    <th scope="col">Localidad inicio</th>
                    <th scope="col">Altura fin</th>
                    <th scope="col">Calle fin</th>
                    <th scope="col">Localidad fin</th>
                    <th scope="col">Frecuencia</th>
                    <th scope="col">Veces por mes</th>
                    <th scope="col">Tramos</th>
                    <th scope="col">Eliminar</th>

                </tr>
            </thead>
            <tbody>
                <div hidden>{{#each trayectos}}</div>
                <tr>
                    <td></td>
                    <td>{{this.puntoDeSalida.altura}}</td>
                    <td>{{this.puntoDeSalida.calle}}</td>
                    <td>{{this.puntoDeSalida.localidad.nombre}}</td>
                    <td>{{this.puntoDeLlegada.altura}}</td>
                    <td>{{this.puntoDeLlegada.calle}}</td>
                    <td>{{this.puntoDeLlegada.localidad.nombre}}</td>
                    <td>{{this.frecuencia.frecuenciaDeUso}}</td>
                    <td>{{this.frecuencia.vecesQueRealizaTrayectoPorMes}}</td>
                    <td>
                        <form action="/trabajador/trayecto/tramos" method="post">
                            <button class="btn btn-success" type="submit" name="trayectoId" value="{{this.id}}">Ver tramos</button>
                        </form>
                    </td>
                    <td>
                        <form action="/trabajador/trayecto/eliminar" method="post">
                            <button class="btn btn-danger" type="submit" name="trayectoId" value="{{this.id}}">Eliminar</button>
                        </form>
                    </td>
                </tr>
                <div hidden>{{/each}}</div>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-success mb-2" style="margin-top: 100px;">
            <a href="/trabajador/trayectos/nuevo" style="color: inherit">
                <h4>Nuevo Trayecto</h4>
            </a>
        </button>
    </div>
</body>

</html>
